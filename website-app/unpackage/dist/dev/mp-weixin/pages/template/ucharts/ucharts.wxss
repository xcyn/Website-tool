	display: flex;
	flex-direction: row !important;
}
.qiun-columns {
	display: flex;
	flex-direction: column !important;
}
.qiun-common-mt {
	margin-top: 10rpx;
}
.qiun-bg-white {
	background: #FFFFFF;
}
.qiun-title-bar {
	width: 96%;
	padding: 10rpx 2%;
	flex-wrap: nowrap;
}
.qiun-title-dot-light {
	border-left: 10rpx solid #0ea391;
	padding-left: 10rpx;
	font-size: 32rpx;
	color: #000000
}

