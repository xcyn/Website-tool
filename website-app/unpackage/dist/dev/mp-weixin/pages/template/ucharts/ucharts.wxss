}
.qiun-tip {
	display: block;
	width: auto;
	overflow: hidden;
	padding: 15rpx;
	height: 30rpx;
	line-height: 30rpx;
	margin: 10rpx;
	background: #ff9933;
	font-size: 30rpx;
	border-radius: 8rpx;
	justify-content: center;
	text-align: center;
	border: 1px solid #dc7004;
	color: #FFFFFF;
}

